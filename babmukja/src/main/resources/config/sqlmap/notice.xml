	<select id="selectNoticeCount" resultType="int">
		select count(*)
		from tb_notice
	</select>

	<select id="selectNoticeByNo" parameterType="int"
		resultMap="noticeMap">
		select *
		from tb_notice
		where no = #{no}
	</select>

<!-- 	전체 조회 -->
	<select id="selectNoticeList" resultType="notice">
	select *
	from tb_notice
	order by no desc
	</select>

	<insert id="insertNotice" parameterType="notice">
		insert into tb_notice(
		no, title, content, writer, group_no
		) values (
		#{no}, #{title}, #{content}, #{writer}, 2
		)
	</insert>

	<delete id="deleteNotice" parameterType="int">
		delete
		from tb_notice
		where no = #{no}
	</delete>

	<update id="updateNotice" parameterType="notice">
		update tb_notice
		set title = #{title},
		content = #{content}
		where no = #{no}
	</update>

	<!-- 조회수 증가시키기 -->
	<update id="updateViewCnt" parameterType="int">
		update tb_notice
		set view_cnt = view_cnt + 1
		where no = #{no}
	</update>

	<!-- 댓글 부분 -->
	<select id="selectCommentByNo" parameterType="int"
		resultType="Comment">
		select *
		from tb_comment
		where no = #{no}
		order by comment_no
	</select>

</mapper>
